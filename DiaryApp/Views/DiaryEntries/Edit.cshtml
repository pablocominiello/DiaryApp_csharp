@model DiaryApp.Models.DiaryEntry

<div class="text-center">
    <div class="card">
        <div class="card-header">
            <h1 class="display-4">Edit Diary Entry</h1>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="text-bg-danger"></div>
                <div class="card-group">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter Title">
                    <span asp-validation-for="Title" class="text-bg-danger"></span>
                </div>
                <div class="card-group">
                    <label asp-for="Content" class="form-label"></label>
                    <input asp-for="Content" row="5" class="form-control" placeholder="Enter what you do" />
                    <span asp-validation-for="Content" class="text-bg-danger"></span>

                </div>
                <div class="card-group">
                    <label asp-for="DateCreated" class="form-label"></label>
                    <input asp-for="DateCreated" class="form-control" type="date" />
                </div>
                <div class="d-flex justify-content-between"></div>
                <button type="submit" class="btn btn-primary">Edit</button>
                <a asp-controller="DiaryEntries" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}